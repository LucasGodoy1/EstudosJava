package aplicacao;

import java.util.Locale;
import java.util.Scanner;

public class programa {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int n = 0;
		System.out.println("Quantos numeros ir√° digitar ? ");
		n = sc.nextInt();
		int[] vetorPositivo = new int [n];
		int[] vetorNegativo = new int [n];
		
		for (int i= 0 ; i < n ; i++) {
			int numero = sc.nextInt();
			if (numero >=0) {vetorPositivo[i] = numero;
			}else {vetorNegativo[i] = numero;
				
			}
		
			System.out.println("Numeros Positivos foram: ");
			for (i = 0 ; i < n ; i ++) {
				System.out.println(vetorPositivo[i]);
			}
			
			System.out.println("Numeros Negativos foram: ");
			for (i = 0 ; i < n ; i ++) {
				System.out.println(vetorNegativo[i]);
			}
			System.out.println("-----FIM-----");
			
			sc.close();
			
			
			
		}
		
		
		
		
		
		
		
		

	}

}
