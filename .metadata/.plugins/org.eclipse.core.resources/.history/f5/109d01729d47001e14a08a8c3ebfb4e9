package aplicacao;

import java.util.Scanner;

public class Matriz {

	public class Main {
	    public static void main(String[] args) {
	        int n = 9; // Tamanho da matriz (deve ser 9 para o formato desejado)
	        int[][] matriz = new int[n][n];

	        // Preencha sua matriz aqui...

	        System.out.println("-------------");

	        // Imprime a parte superior (primeiras 3 linhas)
	        for (int L = 0; L < 3; L++) {
	            for (int c = 0; c < n; c++) {
	                System.out.print(matriz[L][c] + " ");
	            }
	            System.out.println();
	        }

	        System.out.println("-------------");

	        // Imprime a parte do meio (próximas 3 linhas)
	        for (int L = 3; L < 6; L++) {
	            for (int c = 0; c < n; c++) {
	                System.out.print(matriz[L][c] + " ");
	            }
	            System.out.println();
	        }

	        System.out.println("-------------");

	        // Imprime a parte inferior (últimas 3 linhas)
	        for (int L = 6; L < n; L++) {
	            for (int c = 0; c < n; c++) {
	                System.out.print(matriz[L][c] + " ");
	            }
	            System.out.println();
	        }

	        System.out.println("-------------");
	    }
	}
}
